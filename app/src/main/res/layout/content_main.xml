<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.monkeyapp.numbers.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:layout_behavior="com.monkeyapp.numbers.HalfScreenBehavior">

        <include layout="@layout/content_number_word"/>
    </RelativeLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/digitPadView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignmentMode="alignBounds"
        app:columnCount="3"
        app:rowOrderPreserved="true"
        app:useDefaultMargins="false"
        app:layout_behavior="com.monkeyapp.numbers.HalfScreenBehavior">

        <include layout="@layout/content_digit_pad"/>
    </androidx.gridlayout.widget.GridLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
