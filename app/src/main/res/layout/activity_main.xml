<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.monkeyapp.numbers.MainActivity">

    <TextView
        android:id="@+id/digit_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        tools:text="123.00"/>

    <TextView
        android:id="@+id/word_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        tools:text="123.00"/>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        app:alignmentMode="alignBounds"
        app:columnCount="3"
        app:rowOrderPreserved="true"
        app:useDefaultMargins="false">

        <Button
            android:id="@+id/btn_seven"
            android:onClick="onDigitClicked"
            android:text="@string/digit_seven"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_eight"
            android:onClick="onDigitClicked"
            android:text="@string/digit_eight"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_nine"
            android:onClick="onDigitClicked"
            android:text="@string/digit_nine"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_four"
            android:onClick="onDigitClicked"
            android:text="@string/digit_four"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_five"
            android:onClick="onDigitClicked"
            android:text="@string/digit_five"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_six"
            android:onClick="onDigitClicked"
            android:text="@string/digit_six"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_one"
            android:onClick="onDigitClicked"
            android:text="@string/digit_one"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_two"
            android:onClick="onDigitClicked"
            android:text="@string/digit_two"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_three"
            android:onClick="onDigitClicked"
            android:text="@string/digit_three"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_dot"
            android:onClick="onDigitClicked"
            android:text="@string/dot"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_zero"
            android:onClick="onDigitClicked"
            android:text="@string/digit_zero"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_del"
            android:onClick="onDigitClicked"
            android:text="@string/del"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

    </android.support.v7.widget.GridLayout>

</LinearLayout>
