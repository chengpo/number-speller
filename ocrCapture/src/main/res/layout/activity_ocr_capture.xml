<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:keepScreenOn="true">

    <com.monkeyapp.numbers.ocrcapture.CameraSourcePreview
        android:id="@+id/cameraSourcePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.monkeyapp.numbers.ocrcapture.OcrOverlayView
            android:id="@+id/ocrOverlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.monkeyapp.numbers.ocrcapture.CameraSourcePreview>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:text="@string/ocr_keep_numbers_within_box"/>
</FrameLayout>